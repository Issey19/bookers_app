<h1>Books</h1>
<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Body</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <% @books.each do |book| %>
        <tr>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
            <td><%=link_to "Show", book_path(book.id) %></td>
            <td><%=link_to "Edit", edit_path(book.id) %></td>
            <td><%=link_to "Delete","/books/#{book.id}", method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
        </tr>
        <% end %>
    </tbody>
</table>

<h3>New book</h3>
<% if @book.errors.any? %>
<div id = 'error_explanation'>
 <h2><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
  <ul>
   <li>
     Title can't be blank
    </li>
   <li>
     Body can't be blank
    </li>
  </ul>
 </div>
<% end %>

<%= form_for(@book) do |f| %>

    <label for="book_Title">Title</label>
    <div id = 'error_explanation2'>
    <%= f.text_field :title %>
    </div>

   <div class="field">
    <div class="error_explanation3">
    <label for="book_body">Body</label>
    </div>
    <div class="error_explanation3"><textarea class="book_body" name="book[body]" id="book_body"></textarea>
    </div>
  </div>
    
    <br><%= f.submit 'Create Book' %></br>
 <% end %>





